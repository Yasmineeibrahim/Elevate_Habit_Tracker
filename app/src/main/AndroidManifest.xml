<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove"/>

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Elevate"
        tools:targetApi="31">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <meta-data android:name="com.facebook.sdk.ClientToken" android:value="@string/facebook_client_token"/>
        <activity
            android:name=".AchievementsActivity"
            android:exported="false"
            android:label="@string/title_activity_achievements"
            android:theme="@style/Theme.Elevate" />
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SleepingScheduleActivity"
            android:exported="false" />
        <activity
            android:name=".NewHabitActivity"
            android:exported="false" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".DrinkingWaterActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ReadingInitActivity"
            android:exported="false" />
        <activity
            android:name=".TakeoffActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreen1"
            android:exported="false"
            android:label="@string/title_activity_splash_screen1"
            android:theme="@style/Theme.Elevate" />
        <activity
            android:name=".SplashScreen2"
            android:exported="false"
            android:label="SplashScreen2"
            android:theme="@style/Theme.Elevate" />
        <activity
            android:name=".OnboardingScreen1"
            android:exported="false"
            android:label="OnboardingScreen1"
            android:theme="@style/Theme.Elevate" />
        <activity
            android:name=".FitnessScreen"
            android:exported="false"
            android:label="FitnessScreen"
            android:theme="@style/Theme.Elevate" />
        <activity
            android:name=".OnboardingScreen"
            android:exported="false"
            android:label="OnboardingScreen"
            android:theme="@style/Theme.Elevate" />
        <activity
            android:name=".SleepActivity"
            android:exported="false"
            android:label="SleepScreen"
            android:theme="@style/Theme.Elevate" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>