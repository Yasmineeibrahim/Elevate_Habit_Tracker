<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Illustration -->
            <ImageView
                android:layout_width="280dp"
                android:layout_height="250dp"
                android:src="@drawable/reading_illustration"
                android:contentDescription="Reading illustration"
                android:scaleType="fitXY" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="24dp"
                android:textColor="#000000" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose how often you want to practice this habit"
                android:textSize="14sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <!-- Question 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="how many times a day *"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="#DDDDDD"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:hint="2"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="number"
                        android:backgroundTint="@android:color/transparent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Question 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Which time of the day will you\n be ready to start? *"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:hint="09:00 AM"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColorHint="#999999"
                        android:inputType="time"
                        android:backgroundTint="@android:color/transparent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Question 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Which time of the day will\nyou be off this habit?"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:hint="10:00 PM"
                        android:paddingHorizontal="16dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:inputType="time"
                        android:backgroundTint="@android:color/transparent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Question 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="is there a preffered time you\nplan to practice?"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@android:color/white"
                        android:hint="02:00 PM"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:inputType="time"
                        android:backgroundTint="@android:color/transparent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:text="Continue"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:stateListAnimator="@null"
        android:backgroundTint="#FADADD" />

</LinearLayout>
