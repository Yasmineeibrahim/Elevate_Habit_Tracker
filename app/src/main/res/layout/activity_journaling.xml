<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Illustration -->

            <!-- Title -->

            <ImageView
                android:layout_width="306dp"
                android:layout_height="306dp"
                android:contentDescription="Drinking water"
                android:scaleType="fitXY"
                android:src="@drawable/journaling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Journaling"
                android:textColor="#000000"
                android:textSize="24sp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Choose how often you want to practice Journaling"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- 2. Times Per Day -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="how many times a day *"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#DDDDDD"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <EditText
                        android:id="@+id/inputTimesPerDay"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="e.g. 3"
                        android:inputType="number"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 3. Start Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Which time of the day will you be ready to start? *"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#DDDDDD"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <EditText
                        android:id="@+id/inputStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="e.g. 9:00 AM"
                        android:inputType="time"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 4. End Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Which time of the day will you be off this habit?"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#DDDDDD"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <EditText
                        android:id="@+id/inputEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="e.g. 10:00 PM"
                        android:inputType="time"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 5. Preferred Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="is there a preffered time you plan to practice?"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#DDDDDD"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <EditText
                        android:id="@+id/inputPreferredTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="e.g. Evening"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/poppins_medium"
                android:text="Continue"
                android:textColor="#000000"
                android:textSize="16sp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
