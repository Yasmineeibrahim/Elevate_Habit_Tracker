<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Illustration Carousel -->
            <FrameLayout
                android:id="@+id/imageCarouselContainer"
                android:layout_width="306dp"
                android:layout_height="306dp">

                <ImageView
                    android:id="@+id/habitImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="Habit image" />

                <ImageButton
                    android:id="@+id/arrowLeft"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|start"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_arrow_left_24"
                    android:contentDescription="Previous image" />

                <ImageButton
                    android:id="@+id/arrowRight"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Next image" />
            </FrameLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Habit"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="24dp"
                android:textColor="#000000" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's plan your new habit!"
                android:textSize="14sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <!-- Question + Input Rows -->
            <!-- Repeat structure for each question -->

            <!-- 1. Habit Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Whats the name of the habit? *"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:id="@+id/inputHabitName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="e.g. Drink Water"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"
                        android:textDirection="locale"
                        android:textAlignment="viewStart"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 2. Times Per Day -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="how many times a day *"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:id="@+id/inputTimesPerDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="e.g. 3"
                        android:inputType="number"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 3. Start Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Which time of the day will you be ready to start? *"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:id="@+id/inputStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="e.g. 9:00 AM"
                        android:inputType="time"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 4. End Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Which time of the day will you be off this habit?"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:id="@+id/inputEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="e.g. 10:00 PM"
                        android:inputType="time"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 5. Preferred Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="is there a preffered time you plan to practice?"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#DDDDDD">

                    <EditText
                        android:id="@+id/inputPreferredTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="e.g. Evening"
                        android:paddingHorizontal="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:background="@android:color/white"
                        android:backgroundTint="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/poppins_medium"
                android:text="Continue"
                android:textColor="#000000"
                android:textSize="16sp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
