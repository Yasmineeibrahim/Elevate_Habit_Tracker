<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey there,"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="4dp"/>

        <!-- First Name -->
        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="First name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFEDEF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPersonName" />


        <!-- Last Name -->
        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="Last name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFEDEF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPersonName" />

        <!-- Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="First name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFEDEF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPersonName" />

        <!-- Password -->
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="First name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#FFEDEF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPersonName" />

        <!-- Terms & Conditions -->
        <CheckBox
            android:id="@+id/checkbox_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="By continuing you accept our privacy policy and terms of use"
            android:textColor="#948383"
            />

        <TextView
            android:id="@+id/policy_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF69B4"
            android:textSize="14sp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:backgroundTint="@null" />



        <!-- Or Divider -->
        <TextView
            android:id="@+id/or_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="#aaa" />

        <!-- Social Login -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <Space android:layout_width="24dp" android:layout_height="0dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="#817676"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <Space android:layout_width="2dp" android:layout_height="0dp"/>

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login "
                android:textColor="#E64343"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Login Link -->


    </LinearLayout>
</ScrollView>