<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#FAFAFA">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey there,"
                android:paddingTop="24dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000"
                android:layout_marginTop="4dp" />

            <!-- First Name -->
            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:hint="first name"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:paddingStart="12dp"
                android:drawableLeft="@drawable/person_icon"
                android:drawablePadding="12dp"
                android:inputType="textPersonName" />

            <!-- Last Name -->
            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint=" last name"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="12dp"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/person_icon"
                android:inputType="textPersonName" />

            <!-- Email -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint=" email"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="12dp"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:inputType="textEmailAddress" />

            <!-- Password -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint=" Password"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="12dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawableEnd="@drawable/visibility_off_24"
                android:drawablePadding="12dp"
                android:inputType="textPassword" />

            <!-- Terms & Conditions -->
            <CheckBox
                android:id="@+id/checkbox_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:text="By continuing you accept our privacy policy and terms of use"
                android:textColor="#948383" />

            <!-- Register Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:textSize="16dp"
                android:text="Register"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:background="@drawable/gradient_button"
                app:backgroundTint="@null" />

            <!-- Or Divider -->
            <TextView
                android:id="@+id/or_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:layout_marginTop="50dp"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#aaa" />

            <!-- Social Login -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp"
                    app:strokeWidth="0.5dp"
                    app:strokeColor="#000000">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:src="@drawable/facebook" />
                </com.google.android.material.card.MaterialCardView>

                <Space android:layout_width="24dp" android:layout_height="0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp"
                    app:strokeWidth="0.5dp"
                    app:strokeColor="#000000">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/google" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Login Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#817676"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
